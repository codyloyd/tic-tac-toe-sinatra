<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>tictactoe</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <% if @gameover %>
    <h1>GAMEOVER</h1>
  <% else %>
    <h1>TIC TAC TACO</h1>
  <% end %>
  <div class="gameboard">
    <div class="row">
      <div class="square" id=square1 value=0><%= @board[0] %></div>
      <div class="square" id=square2 value=1><%= @board[1] %></div>
      <div class="square" id=square3 value=2><%= @board[2] %></div>
    </div>
    <div class="row">
      <div class="square" id=square4 value=3><%= @board[3] %></div>
      <div class="square" id=square5 value=4><%= @board[4] %></div>
      <div class="square" id=square6 value=5><%= @board[5] %></div>
    </div>
    <div class="row">
      <div class="square" id=square7 value=6><%= @board[6] %></div>
      <div class="square" id=square8 value=7><%= @board[7] %></div>
      <div class="square" id=square9 value=8><%= @board[8] %></div>
    </div>
  </div>
  <a href="/newgame"><h2>Start Over</h2></a>

  <% if !@gameover %>
    <script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
    <script src="script.js"></script>
  <% end %>
</body>
</html>